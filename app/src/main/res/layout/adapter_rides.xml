<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/ride_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="StartTime"
            android:layout_marginBottom="20dp"
            android:textSize="13dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/ride_start_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="StartLocation"
                android:textSize="13dp"
                android:layout_alignParentLeft="true"
                tools:ignore="RtlCompat" />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_car"
                android:layout_marginHorizontal="10dp"
                />
            <TextView
                android:id="@+id/ride_end_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="EndLocation"
                android:textSize="13dp"
                android:layout_alignParentLeft="true"
                tools:ignore="RtlCompat" />
        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/ride_driver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Conducteur"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/ride_nbseats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nb de places"
                android:layout_marginTop="5dp"/>
            <Button
                android:id="@+id/button_ride_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Ã§a part"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>